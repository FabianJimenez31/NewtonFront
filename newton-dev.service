[Unit]
Description=Newton CRM Development Server
Documentation=https://kit.svelte.dev/
After=network.target

[Service]
Type=simple
User=debian
WorkingDirectory=/home/debian/newton
ExecStart=/usr/bin/npm run dev
Restart=always
RestartSec=10

# Environment variables
Environment="NODE_ENV=development"
Environment="PATH=/usr/bin:/bin:/usr/local/bin"

# Output to journal
StandardOutput=journal
StandardError=journal

# Give the service a reasonable amount of time to start
TimeoutStartSec=30

# Prevent OOM killer
OOMScoreAdjust=-500

[Install]
WantedBy=multi-user.target